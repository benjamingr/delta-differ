    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Examples",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug-examples"
            ],
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "runtimeExecutable": "npm",
            "outputCapture": "std",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Open File",
            "runtimeExecutable": "npm",
            "outputCapture": "std",
            "runtimeArgs": [
                "run-script",
                "debug-file",
                "${file}"
            ],
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Headless",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "headless"
            ],
            "port": 9229
        }
    ]
}